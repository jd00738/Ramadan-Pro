<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/mybutton"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rozaNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="1 Ramadan"
                android:textColor="@color/Splash_background"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rozaDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="22 April"
                android:textColor="@color/Splash_background"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/seharTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="4:00 AM"
            android:textColor="@color/Splash_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aftarTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="6:40 Pm"
            android:textColor="@color/Splash_background"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>