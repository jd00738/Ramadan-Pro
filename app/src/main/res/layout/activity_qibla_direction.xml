<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/home_background"

    android:gravity="center_horizontal"

    android:orientation="vertical"

    tools:context=".QiblaDirection">


    <include layout="@layout/toolbar"></include>


    <RelativeLayout
        android:id="@+id/compass_layout"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="3dp">


        <ImageView
            android:id="@+id/compass"
            android:layout_width="match_parent"

            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/compass_dial"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/compas" />


        <ImageView

            android:id="@+id/qibla_indicator"

            android:layout_width="45dp"

            android:layout_height="240dp"

            android:layout_centerInParent="true"

            android:contentDescription="@string/compass_hands"

            android:rotation="0"

            android:scaleType="fitXY"
            android:src="@drawable/needle" />

    </RelativeLayout>


    <TextView

        android:id="@+id/latlong"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="15dp"

        android:gravity="center_horizontal"

        android:text="Degree : 0"

        android:textColor="@color/Splash_background"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>